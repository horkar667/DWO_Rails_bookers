<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <div class="alert">
    <div class="alert_message">
      <%if @book.errors.count == 1 %>
      1 error prohibited this book from being saved:
      <% else %>
      2 errors prohibited this book from being saved:
      <% end %>
    </div>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
    <div>Title</div>
    <%= f.text_field :title, value: @book.title %>
    <div class="index_form">Body</div>
    <%= f.text_area :body, value: @book.body %>
    <div class="index_form edit_form"><%= f.submit 'Update Book' %></div>
  <% end %>
<% else %>
  <%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
    <div>Title</div>
    <%= f.text_field :title, value: @book.title %>
    <div class="index_form">Body</div>
    <%= f.text_area :body, value: @book.body %>
    <div class="index_form edit_form"><%= f.submit 'Update Book' %></div>
  <% end %>
<% end %>
<%= link_to "Show", book_path(params[:id]), class: "edit_btn" %> | <%= link_to "Back","/books", class: "edit_btn" %>