 <% flash.each do |message_type, message| %>
      <p class ="message_color"><%= message %></p>
 <% end %>
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>
  <% @books.each do |book| %>
  <tbody>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
  </tbody>
  <% end %>
</table>

<h2>New book</h2>
<% if @book.errors.any? %>
  <div class="alert">
    <div class="alert_message">
      <%= @book.errors.count %> errors prohibited this book from being saved:
    </div>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <%= form_with model:@book, url:"/books", local:true do |f| %>
    <div>Title</div>
    <%= f.text_field :title %>
    <div class="index_form">Body</div>
    <%= f.text_area :body %>
    <div class="index_form"><%= f.submit 'Create Book' %></div>
  <% end %>
<% else %>
  <%= form_with model:@book, url:"/books", local:true do |f| %>
    <div>Title</div>
    <%= f.text_field :title, value: @book.title %>
    <div class="index_form">Body</div>
    <%= f.text_area :body, value: @book.body %>
    <div class="index_form"><%= f.submit 'Create Book' %></div>
  <% end %>
<% end %>
